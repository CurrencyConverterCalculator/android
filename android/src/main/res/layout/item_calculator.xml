<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.github.mustafaozhan.data.util.TypeExtensionKt" />

        <variable
            name="item"
            type="com.github.mustafaozhan.data.model.Currency" />

        <variable
            name="event"
            type="com.github.mustafaozhan.ui.main.calculator.CalculatorEvent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/BaseItemLayout"
        android:onClick="@{() -> event.onItemClick(item,TypeExtensionKt.toStandardDigits(TypeExtensionKt.getFormatted(item.rate)))}"
        android:onLongClick="@{() -> event.onItemLongClick(item)}">

        <TextView
            android:id="@+id/txt_amount"
            style="@style/CalculatorItemAmountTextStyle"
            android:text="@{TypeExtensionKt.toStandardDigits(TypeExtensionKt.getFormatted(item.rate))}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_symbol"
            style="@style/CalculatorItemSymbolTextStyle"
            android:text="@{item.symbol}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_amount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_type"
            style="@style/CalculatorItemTypeTextStyle"
            android:text="@{item.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_item"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_item"
            style="@style/CalculatorItemImageView"
            app:backgroundByName="@{item.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>